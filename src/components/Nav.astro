---
import { Icon } from "astro-icon/components";

import Link from "./Link.astro";

import navData from "../data/navData";
---

<nav aria-label="Primary">
    <div class="navbar">
        <a href="/" class="logomark" aria-label="Home">
            <Icon name="kenton" width="90" height="90" />
        </a>

        <ul>
            {
                navData.map((item) => (
                    <Link
                        text={item.name}
                        href={item.path}
                        style="primary"
                        isFilled={false}
                        data-navLink
                    />
                ))
            }
        </ul>
    </div>
</nav>

<script>
    import "../js/nav";
</script>
